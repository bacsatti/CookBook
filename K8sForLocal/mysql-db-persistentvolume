apiVersion: v1
kind: PersistentVolume
metadata:
  name: homework
  namespace: default
spec:
  storageClassName: ""
  volumeMode: Filesystem
  claimRef:
    name: mysql-db-claim0
    namespace: default
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: 100Mi
  persistentVolumeReclaimPolicy: Recycle
  hostPath:
    path: init.sql
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - minikube